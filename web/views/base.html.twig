<html lang="pt_BR">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>PHP S3 Viewer</title>
        {% block stylesheets %}
            <link href="{{ app.request.basepath }}/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css"></link>
            <link href="{{ app.request.basepath }}/assets/css/main.css" rel="stylesheet" type="text/css"></link>
        {% endblock %}

    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">PHP S3 Viewer</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <form class="navbar-form navbar-right">
                        <input class="form-control" type="text" placeholder="Search ...">
                    </form>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
        
        <div class="container-fluid">
            {% block content %}
            {% endblock %}
        </div>
    </body>
    
    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="{{ app.request.basepath }}/assets/js/bootstrap.min.js" type="application/javascript"></script>
        <script src="{{ app.request.basepath }}/assets/js/main.js" type="application/javascript"></script>
    {% endblock %}
</html>